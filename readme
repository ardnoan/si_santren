# ========================================
# STEP-BY-STEP SETUP SISANTREN
# ========================================

# 1. Masuk ke folder project
cd C:\xampp\htdocs\Kuliah\WebApps_SiSantren

# 2. Copy file .env.example ke .env (sudah dilakukan otomatis)
# Pastikan konfigurasi database di .env sudah benar:
# DB_DATABASE=sisantren_db
# DB_USERNAME=root
# DB_PASSWORD=

# 3. Generate Application Key (sudah dilakukan)
php artisan key:generate

# 4. Buat Database MySQL
# Buka MySQL/PhpMyAdmin dan jalankan:
# CREATE DATABASE sisantren_db;

# 5. Jalankan Migrations
php artisan migrate

# 6. Jalankan Seeder untuk data awal
php artisan db:seed

# 7. Create Storage Link (untuk upload files)
php artisan storage:link

# 8. Buat folder untuk uploads
mkdir public\uploads
mkdir public\uploads\bukti_transfer
mkdir public\uploads\foto_santri

# 9. Install Laravel UI (optional - untuk authentication scaffolding)
composer require laravel/ui
php artisan ui bootstrap --auth

# 10. Install NPM dependencies (optional - jika pakai frontend)
npm install
npm run dev

# 11. Jalankan Laravel Development Server
php artisan serve

# ========================================
# AKSES APLIKASI
# ========================================
# URL: http://localhost:8000
# 
# LOGIN CREDENTIALS:
# Admin:  admin / admin123
# Ustadz: ustadz1 / ustadz123
# Santri: santri1 / santri123
# ========================================

# TROUBLESHOOTING:
# Jika ada error permission di storage:
# chmod -R 775 storage bootstrap/cache
# (Untuk Windows, pastikan folder storage & bootstrap/cache bisa di-write)

# Jika ada error composer autoload:
# composer dump-autoload

# Clear cache:
php artisan cache:clear
php artisan config:clear
php artisan route:clear
php artisan view:clear